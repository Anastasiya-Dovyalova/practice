/*Напишите код, в котором попытаетесь обратиться к переменной до её объявления с использованием var, let и const. 
Определите, какие переменные допускают такое использование, а какие нет.*/

function accessToVar() {
    console.log (x);//undefined
    var x = 'Обращение возможно';

    y = 'Обращение возможно';
    console.log(y);//Обращение возможно
    var y;
}

/*Вывод: Объявление переменной var обрабатывается в начале выполнения функции («всплывает»), 
однако присвоение значения всегда происходит в той строке кода, где оно указано. 
Вызов console.log происходил без ошибки, потому что переменные уже существовали. 
Но, в случае с переменной x, значение переменной ещё не было присвоено, поэтому мы получали undefined*/

function accessToLet() {
    x = 'Обращение возможно';
    console.log(x);//Error: Cannot access 'y' before initialization
    let x;
}

function accessToConst() {
    x = 'Обращение возможно';
    console.log(x);//Error: Cannot access 'y' before initialization
    const x;
}

/*В случае с переменными let и const обращение невозможно.*/
