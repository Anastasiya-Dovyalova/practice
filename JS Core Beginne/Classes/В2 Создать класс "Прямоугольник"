/*Создайте класс под названием «Прямоугольник» со свойствами ширины и высоты. 
Включите два метода расчета площади и периметра прямоугольника.
Создайте экземпляр класса «Прямоугольник» и вычислите его площадь и периметр.*/

class Rectangle{
    constructor(width, height) {
        this.width = width;
        this.height = height;

    }
    square(){
        return this.height* this.width;
    }
    perimeter(){
        return 2 * (this.height + this.width);
    }
}
let rectangle = new Rectangle(4,6);
console.log(rectangle.square());//24
console.log(rectangle.perimeter());//20
