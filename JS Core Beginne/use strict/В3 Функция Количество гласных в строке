/*Напишите функцию, которая принимает строку и возвращает количество гласных букв в ней.
Используйте строгий режим.*/

'use strict'
function calcTheNumberOfVowels(str) {
    let vowels = 'аАеЕёЁиИоОуУыЫэЭюЮяЯaAeEiIoOuUyY';
    let x = 0;

    for( let i = 0; i < str.length ; i++) {
        if (vowels.indexOf(str[i]) !== -1) {
            x += 1;
        }

    }
    return x;
}
console.log(calcTheNumberOfVowels('Это первое задание в данном варианте (This is the first task in this version)'));//25
